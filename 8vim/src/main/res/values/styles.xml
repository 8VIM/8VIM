<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeLightBase" parent="Theme.Material3.DynamicColors.Light" />

    <style name="AppThemeLight" parent="AppThemeLightBase" />

    <style name="AppThemeLightBase.NoActionBar" parent="AppThemeLight">
        <item name="backgroundColor">?colorSurface</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:statusBarColor">?colorPrimary</item>
    </style>

    <style name="AppThemeLight.NoActionBar" parent="AppThemeLightBase.NoActionBar" />

    <style name="AppTheme.Keyboard" parent="android:Theme.Material.InputMethod">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:statusBarColor">?colorPrimary</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppThemeLight.NoActionBar" />

    <style name="AppTheme.Splash" parent="Theme.SplashScreen.IconBackground">
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
</resources>
