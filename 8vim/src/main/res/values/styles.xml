<resources>
    <style name="AppTheme" parent="Theme.AppCompat"/>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="AppTheme.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- possibly dead code -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <!-- possibly dead code -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?android:textColorPrimary</item>
    </style>

    <style name="MainText" parent="TextAppearance.AppCompat"/>

    <style name="Button" parent="Widget.AppCompat.Button"/>

    <style name="ContentLauncherFullWidthButton">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="KeyboardSidebarButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>
