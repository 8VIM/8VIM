<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeLightBase" parent="Theme.Material3.DynamicColors.Light" />

    <style name="AppThemeLight" parent="AppThemeLightBase" />

    <style name="AppThemeLightBase.NoActionBar" parent="AppThemeLight">
        <item name="backgroundColor">?colorSurface</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="toolbarStyle">@style/MaterialToolbar</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
    </style>

    <style name="AppThemeLight.NoActionBar" parent="AppThemeLightBase.NoActionBar" />

    <style name="AppTheme.NoActionBar" parent="AppThemeLight.NoActionBar" />

    <style name="AppTheme.Splash" parent="Theme.SplashScreen.IconBackground">
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="MaterialToolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">?colorOnPrimary</item>
    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?colorOnPrimary</item>
    </style>

    <style name="KeyboardView" parent="android:Widget">
        <item name="keyBackground">@drawable/key_bg</item>
    </style>
</resources>
