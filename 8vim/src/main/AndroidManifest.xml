<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="inc.flide.vim8">

    <application
        android:allowBackup="false"
        android:icon="@drawable/vd_vector_aliceblue"
        android:label="@string/app_name"
        tools:ignore="GoogleAppIndexingWarning">
        <service
            android:name="inc.flide.vim8.MainInputMethodService"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>

            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

        <activity
            android:name="inc.flide.vim8.ui.LauncherActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.ResizeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>


        <activity android:name=".ui.SetCenterActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>



</manifest>