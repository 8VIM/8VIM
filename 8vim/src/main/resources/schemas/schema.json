{
  "$id": "https://8vim.github.io/schemas/schema.json",
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "type": "object",
  "title": "8VIM layout",
  "properties": {
    "version": {
      "$anchor": "version",
      "type": "string",
      "enum": ["2","2.1"]
    }
  },
  "if": {
    "anyOf": [
      {
        "properties": {
          "version": {
            "const": "2"
          }
        },
        "required": [
          "version"
        ]
      },
      {
        "not": {
          "required": [
            "version"
          ]
        }
      }
    ]
  },
  "then": {
    "$ref": "/schemas/versions/2.json"
  },
  "else": {
    "if": {
      "properties": {
        "version": {
          "const": "2.1"
        }
      },
      "required": [
        "version"
      ]
    },
    "then": {
      "$ref": "/schemas/versions/2.1.json"
    }
  }
}
