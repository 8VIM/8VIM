{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "action": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^(?i)(input_text|input_key)$",
          "message": {
            "pattern": "type can only be input_text or input_key"
          }
        },
        "flags": {
          "type": "integer"
        },
        "key_code": {
          "type": "string"
        },
        "lower_case": {
          "type": "string"
        },
        "movement_sequence": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^(?i)(no_touch|inside_circle|top|left|bottom|right|long_press|long_press_end)$",
            "message": {
              "pattern": "Finger position can only one of: [no_touch, inside_circle, top, left, bottom right, long_press, long_press_end]"
            }
          }
        },
        "upper_case": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "if": {
        "anyOf": [
          {
            "not": {
              "required": [
                "type"
              ]
            }
          },
          {
            "properties": {
              "type": {
                "pattern": "^(?i)(input_text)$"
              }
            }
          }
        ]
      },
      "then": {
        "required": [
          "lower_case"
        ],
        "message": {
          "required": "lower_case is required for input_text type"
        }
      }
    },
    "sectors": {
      "type": "object",
      "properties": {
        "sectors": {
          "type": "object",
          "patternProperties": {
            "^(?i)(left|right)$": {
              "type": "object",
              "properties": {
                "parts": {
                  "type": "object",
                  "patternProperties": {
                    "^(?i)(top|bottom)$": {
                      "$ref": "#/definitions/actionList"
                    }
                  },
                  "additionalProperties": false,
                  "message": {
                    "additionalProperties": "Only top/bottom parts are valid for left/right sectors"
                  }
                }
              },
              "required": [
                "parts"
              ],
              "additionalProperties": false
            },
            "^(?i)(top|bottom)$": {
              "type": "object",
              "properties": {
                "parts": {
                  "type": "object",
                  "patternProperties": {
                    "^(?i)(left|right)$": {
                      "$ref": "#/definitions/actionList"
                    }
                  },
                  "additionalProperties": false,
                  "message": {
                    "additionalProperties": "Only left/right parts are valid for top/bottom sectors"
                  }
                }
              },
              "required": [
                "parts"
              ],
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "actionList": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/action"
      },
      "maxItems": 4,
      "message": {
        "maxItems": "There is only up to 4 actions per sectors/parts"
      }
    }
  },
  "type": "object",
  "properties": {
    "info": {
      "type": "object",
      "properties": {
        "contact": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "name": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "description": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "layers": {
      "type": "object",
      "properties": {
        "default": {
          "$ref": "#/definitions/sectors"
        },
        "extra_layers": {
          "type": "object",
          "patternProperties": {
            "^(?i)(first|second|third|fourth|fifth)$": {
              "$ref": "#/definitions/sectors"
            }
          },
          "additionalProperties": false,
          "message": {
            "additionalProperties": "extra_layers can only have [first, second, third, fourth, fifth]"
          }
        },
        "hidden": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/action"
          }
        }
      },
      "additionalProperties": false,
      "if": {
        "required": [
          "extra_layers"
        ]
      },
      "then": {
        "required": [
          "default"
        ],
        "message": {
          "required": "Default layer is required if extra_layers is defined"
        }
      },
      "else": {
        "if": {
          "required": [
            "hidden"
          ]
        },
        "then": {
          "required": [
            "hidden"
          ]
        },
        "else": {
          "required": [
            "default"
          ],
          "message": {
            "required": "default or hidden is required"
          }
        }
      }
    }
  },
  "required": [
    "layers"
  ],
  "additionalProperties": false
}